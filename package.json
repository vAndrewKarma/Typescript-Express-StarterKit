{
  "name": "express-typescript-starter",
  "description": "A simple Express-Typescript starter kit, which can be used in building your next great project",
  "version": "1.0.0",
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.2.1",
    "@types/supertest": "^2.0.12",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "author": {
    "name": "vAndrewKarma",
    "email": "karma.andrew16@gmail.com"
  },
  "keywords": [
    "node",
    "node.js",
    "boilerplate",
    "express",
    "jest",
    "husky",
    "eslint",
    "prettier"
  ],
  "scripts": {
    "test": "jest",
    "prepare": "husky install .husky && npx husky-init -y  && npx husky set .husky/pre-commit \"npm run precommit\"",
    "dev": "nodemon",
    "prettier": "prettier --check **/*.js",
    "build": "tsc -p tsconfig.json",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "ready": "npm run format && npm run build",
    "precommit": "lint-staged --allow-empty"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "winston": "^3.8.2"
  }
}
